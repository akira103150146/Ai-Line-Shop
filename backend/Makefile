# Makefile for Django Project

# ==============================================================================
# Development Tasks
# ==============================================================================

# 啟動開發伺服器
run:
	python manage.py runserver

# 執行資料庫遷移
migrate:
	python manage.py migrate

# 建立新的資料庫遷移檔案
makemigrations:
	python manage.py makemigrations

# 安裝專案所需的套件
install:
	pip install -r requirements.txt

# ==============================================================================
# Linting and Formatting (未來可擴充)
# ==============================================================================

# lint:
# 	flake8 .

# format:
# 	black .